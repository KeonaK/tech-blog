<h3>Dashboard</h3>
<div class="row">
  <div class="col-auto">
    <h4>Welcome, {{name}}!</h4>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h5>Create New Post:</h5>

    <form class="form new-create-form">
      <div class="form-group">
        <label for="project-name">Title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Content:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>


  <div class="col-md-6 project-list">
    <h3>Current Posts:</h3>

    {{#each creates as |create|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <div "><a href = " /creates/{{create.id}}">{{create.title}} {{format_date
          date_created}}</a></div>
      </div>
      <div class="col-md-4">

      </div>
      {{/each}}
    </div>

  </div>

  <script src="./js/dashboard.js"></script>